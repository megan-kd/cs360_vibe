extends layout

block metadata
  meta(
    name="description"
    content="Playlist of the Day Home"
  )

block content
  .vibe-content-section.vibe-see-through-bkgd
    h1.vibe-page-title= title
    h3.vibe-page-title= date
    p Welcome to our #{title} project
    button#vibe-export-playlist-btn.btn.btn-primary(type="button") Export playlist
        i.vibe-spotify-icon.fab.fa-spotify.fa-3x
    ol.vibe-song-list
      li.vibe-song-list-item Example Song 1 by Example Artist
        br
        button.vibe-upvote-btn.btn.btn-info(type="button") 
          i.vibe-upvote-icon.fas.fa-thumbs-up.fa-2x
