extends layout

block metadata
  meta(
    name="description"
    content="Playlist of the Day Home"
  )

block content
  .vibe-content-section.vibe-see-through-bkgd
    h1.vibe-page-title= title
    h3.vibe-page-title= date
    .vibe-two-col-container
      .vibe-col-two
        p Welcome to our #{title} project! Feel free to suggest whatever song fits how you are feeling today!
        .vibe-add-song-btn-container
          button#vibe-add-song-btn.btn.btn-dark(type="button") 
            i.vibe-add-song-icon.fas.fa-plus.fa-lg 
            span Add a Song
          hr.vibe-major-hr
        .vibe-contribute-song-container
          h4.vibe-contribute-song-container-heading Contribute Your Song
          form#search-form(
            action="/search"
            method="POST"
          )
            input#track-input.form-control(name="trackName" type="text" placeholder="Track name")
            input#artist-input.form-control(name="artistName" type="text" placeholder="Artist name")
            button#search-btn.btn.btn-dark(type="submit") 
              i.fas.fa-search
      .vibe-col-one
        button#export-playlist-btn.vibe-container-heading.btn.btn-primary(type="button") Export playlist
          i.vibe-spotify-icon.fab.fa-spotify.fa-3x
        ol.vibe-song-list
          // Add class "vibe-upvote-btn-pressed" to indicate that a song has been upvoted!!
          li.vibe-song-list-item Example Song 1 by Example Artist
            br
            .vibe-voting-section
              button.vibe-upvote-btn.btn.btn-info(type="button") 
